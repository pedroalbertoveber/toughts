<div class="dashboard">
  <div class="title-container">
    <h2>Dashboard</h2>
    <a href="/toughts/add" class="btn">Criar Pensamento</a>
  </div>
  <h3>Seus pensamentos:</h3>
  <ul>
    {{#each toughts}}
    <li>
      <span class="label">{{this.title}}</span>
      <div class="actions">
        <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
        <form action="/toughts/remove" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="submit" class="btn" value="Excluir"/>
        </form>
      </div>
    </li>
    {{/each}}
  </ul>
  {{#if emptytoughts}}
    <p>Ainda não há nenhum pensamento seu... Começe a criar <a href="/toughts/add">por aqui.</a></p>
  {{/if}}
</div>